{
  "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true
  },
  "extends": ["next/core-web-vitals", "next/typescript", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12
  },
  "rules": {
    "no-console": "off",  // Permite console.log, mas exibe um aviso
    "indent": ["error", 2], // Indentação de 2 espaços
    "quotes": ["error", "single"], // Força o uso de aspas duplas
    "semi": ["error", "always"], // Sempre usar ponto e vírgula
    "comma-dangle": ["error", "never"], // Proíbe vírgulas no final de objetos/arrays
    "no-unused-vars": ["warn"], // Avisa sobre variáveis não utilizadas
    "arrow-body-style": ["error", "as-needed"], // Prefere funções arrow sem chaves quando possível
    "prefer-const": "error", // Exige `const` ao invés de `let` quando a variável não muda
    "@typescript-eslint/no-require-imports" : "off",
    "eslint-disable-next-line @typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": "off"
  }
}
